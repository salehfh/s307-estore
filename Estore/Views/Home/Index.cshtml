@model HomeVM
@{
    ViewData["Title"] = "Index";
}
   

      <!-- Hero Area starts  -->
    <section class="slider-area">
        @foreach (HomeSlider homeSlider in Model.HomeSliders)
       {
            <div class="single-slider slider-height" style="background-image: url(&quot;images/@homeSlider.Backgroundimg&quot;);">
            <div class="container">
                <div class="row d-flex align-items-center justify-content-between">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 d-none d-md-block">
                        <div class="hero__img animate__animated animate__bounceIn">
                            <img src="images/@homeSlider.Img" alt=" ">
                        </div>
                    </div>
                    <div class="col-xl-5 col-lg-5 col-md-5 col-sm-8 ">
                        <div class="hero__caption ">
                            <span class="animate__animated animate__fadeInRight">@homeSlider.Discountpercent% Discount</span>
                            <h1 class="animate__animated animate__fadeInRight">@Html.Raw(@homeSlider.Title)</h1>
                            <p class="animate__animated animate__fadeInRight">@homeSlider.Description</p>


                            <div class="hero__btn animate__animated animate__fadeInRight">
                                <a href="industries.html " class="btn custom-btn hero-btn ">Shop Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       }
    </section>
    <!-- Hero area ends -->
    <!-- Category area starts -->
    <section id="category-area" class="section-padding30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title text-center mb-85">
                        <h2>
                            Shop by Category
                        </h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (ShopCategory item in Model.ShopCategories)
               {
                    <div class="col-xl-4 col-lg-6">
                    <div class="single-category mb-30">
                        <div class="category-img">
                            <img src="images/@item.Img" alt="homecategoryimg">
                            <div class="category-caption">
                               
                                @if (item.IsBestnewDeal)
                               {
                                <h2>@item.BrandName</h2>    
                                <span class="best"><a href="#">Best New Deals</a></span>
                                    <span class="collection">New Collection</span>
                                }
                                else
                                {
                                      <span class="collection">Discount!</span>
                                <h2>@item.BrandName</h2>
                                <p>New Collection</p>
                                    
                                }

                            </div>
                        </div>
                    </div>
                </div>
               }
               
              

            </div>
        </div>
    </section>
    <!-- Category area ends  -->
        <!-- Latest products area starts -->
    <section id="latest-products" class="padding-bottom">
        <div class="container">
            <div class="row product-btn d-flex justify-content-end align-items-end">
                <div class="col-xl-4 col-lg-5 col-md-5">
                    <div class="section-title mb-30">
                        <h2>
                            Latest Products
                        </h2>
                    </div>

                </div>
                  @await Component.InvokeAsync("Filter","float-end")
                      </div>
    </section>
    <!-- Latest products area ends -->


    <!-- Best product area starts -->
    <section class="best-product-area plr-60">
        <div class="product-wrapper bg-height" style="background-image:url(images/@Model.BestProduct.Backgroundimg)">
            <div class="container position-relative">
                <div class="row justify-content-between align-items-end">
                    <div class="product-man position-absolute  d-none d-lg-block">
                        <img src="images/@Model.BestProduct.Modelimg" alt="">
                    </div>
                    <div class="col-xl-2 col-lg-2 col-md-2 d-none d-lg-block">
                        <div class="vertical-text">
                            <span>@Model.BestProduct.Productname</span>
                        </div>
                    </div>
                    <div class="col-xl-8 col-lg-8">
                        <div class="best-product-caption">
                            <h2>Find The Best Product<br> from Our Shop</h2>
                            <p>@Model.BestProduct.Title</p>
                            <a href="#" class="black-btn">Shop Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="shape animate__animated animate__bounce d-none d-md-block">
            <img src="images/@Model.BestProduct.Img">
        </div>
    </section>
    <!-- Best product area ends -->
    <!-- Best collection area starts -->
    <section class="best-collection-area section-padding2">
        <div class="container">
            <div class="row d-flex justify-content-between align-items-end">

                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="best-left-cap">
                        <h2>Best Collection of This Month</h2>
                        <p>@Model.BestCollection.Title</p>
                        <a href="#" class="btn shop1-btn">Shop Now</a>
                    </div>
                    <div class="best-left-img mb-30 d-none d-sm-block">
                        <img src="images/@Model.BestCollection.Leftimg" alt="">
                    </div>
                </div>

                <div class="col-xl-2 col-lg-2 d-none d-lg-block">
                    <div class="best-mid-img mb-30 ">
                        <img src="images/@Model.BestCollection.Modelimg" alt="">
                    </div>
                </div>

                <div class="col-xl-4 col-lg-6 col-md-6">
                    @foreach (BestCollectionitems item in Model.BestCollection.Collectionitems)
                   {
                        <div class="best-right-cap float-end">
                        <div class="best-single mb-30">
                            <div class="single-cap">
                               <h4>@Html.Raw(@item.ProductName)</h4>
                            </div>
                            <div class="single-img">
                                <img src="images/@item.Img" alt="">
                            </div>
                        </div>
                    </div>
                   }
                   
                   
                </div>
            </div>
        </div>
    </section>
    <!-- Best collection area ends -->
   
    @await Html.PartialAsync("_LatestSubscribePartial",Model.LatestSubscribe)
    @await Html.PartialAsync("_ShopMethodPartial",Model.ShopMethods)
    @await Html.PartialAsync("_GalleryPartial",Model.Galleries)