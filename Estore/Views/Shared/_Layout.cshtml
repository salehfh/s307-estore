                                </div>
                            </div>
                            <ul class="bottom-header-right  d-flex d-lg-table-row">

                              
                                <li class="d-lg-table-cell shopping pt-3">
                                    <div class="shopping-card cart-block">
                                        <a asp-controller="Cart" asp-action="Index"><i class="fas fa-shopping-cart"></i></a>
                                               <div class="cart-total">
                                            <span class="text-number">
                                                @layoutService.GetBasket().Count
                                            </span>
                                           
                                            @if (layoutService.GetBasket().Count > 0)
                                            {
                                                double total = 0;
                                                foreach (BasketVM basketVM in layoutService.GetBasket())
                                                {
                                                    total += (basketVM.Quantity * basketVM.Price);
                                                }

                                                <span class="price pt-3">
                                                    $@total.ToString("F2");
                                                    <i class="fas fa-chevron-down"></i>
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="price pt-3">
                                                    $0.00
                                                    <i class="fas fa-chevron-down"></i>
                                                </span>
                                            }

                                        </div>
                                        <div class="cart-dropdown-block">
                                            <div class=" single-cart-block ">
                                                @foreach (BasketVM basketVM in layoutService.GetBasket())
	                                            {
                                                    <div class="cart-product">
