    <script>
        var $input = $(".input-number");

        $input.val(1);


        $(".minuspilus").click(function() {
            if ($(this).hasClass('input-number-increment'))
                $input.val(parseInt($input.val()) + 1);
            else if ($input.val() >= 1)
                $input.val(parseInt($input.val()) - 1);
        });
