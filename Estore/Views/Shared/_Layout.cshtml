                                                    <a asp-controller="Cart" asp-action="Index" class="btn-block-btns">
                                                        View Cart <i style="" class="fas fa-chevron-right"></i>
                                                    </a>
                                                    <a asp-controller="Checkout" asp-action="Index" class="btn-block-btns" style=" background: #62ab00;color: #fff !important;margin-right: 0;">
                                                        Check Out <i class="fas fa-chevron-right"></i>
                                                    </a>
                                                </div>
                                            </div>
