                                                        </a>
                                                        <div class="content">
                                                            <h3 class="title">
                                                                <a asp-controller="Product" asp-action="Productdetails" asp-route-Id="@basketVM.Id">
                                                                    @basketVM.Title
                                                                </a>
                                                            </h3>
                                                            <p class="price"><span class="qty">@basketVM.Quantity ×</span> $@((basketVM.Quantity * basketVM.Price).ToString("F2"))</p>
                                                            <a asp-controller="Cart" asp-action="RemoveCart" asp-route-Id="@basketVM.Id" class="cross-btn"><i style="border:unset" class="fas fa-times"></i></a>
                                                        </div>
                                                    </div>
	                                            }
