@model IEnumerable<ShopMethod>
<!-- Shop method area starts -->
    <section class="shop-method-area section-padding30">
        <div class="container">
            <div class="row justify-content-between">
                @foreach (ShopMethod item in Model)
            {
                <div class="col-xl-3 col-lg-3 col-md-6">
                    <div class="shopping-method mb-40">
                        @if (item.Id == 1)
                        {
                         <i class="fab fa-dropbox"></i>
                       
                           

                        }
                        else if (item.Id == 2)
                        {
                            <i class="fas fa-unlock"></i>
                        }
                        else
                        {
                             <i class="fas fa-sync"></i>             
                        }

                        <h6>@item.MethodName</h6>
                        <p>@item.Description</p>
                    </div>
                </div>
               }
               
               
            </div>
        </div>
    </section>
    <!-- Shop method area ends -->